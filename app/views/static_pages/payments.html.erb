<% @name = params[:name] %>
<% @name ||= "" %>
<% @school = params[:school] %>
<% @school ||= "" %>
<% @participation = params[:participation] %>
<% @participation ||= "" %>
<% if @participation == "Full" %>
<% @amount = '25' %>
<% elsif @participation == "Combo" %>
<% @amount = '15' %>
<% elsif @participation == "Shirt" %>
<% @amount = '8' %>
