<% @amount = '8' %>
<% else %>
<% @amount = '25' %>
<% end %>
<% if @participation == "" %>
<% @url = 'https://venmo.com/?txn=pay&recipients=6029091046&amount=25&note=MedGamesParticipation&audince=private/' %>
<% else %>
<% @url = 'https://venmo.com/?txn=pay&recipients=6029091046&amount=' + @amount + '&note=' + @name + '_' + @school + '_MedGames_' + @participation + 'Option&audience=private/' %>
<% end %>
